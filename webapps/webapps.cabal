executable webapps
  hs-source-dirs:      src
  main-is:             Main.hs
  default-language:    Haskell2010
  ghc-options:         -threaded -rtsopts
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , yaml
                     , wai
                     , http-types
                     , warp
                     , http-reverse-proxy
                     , process
                     , async
                     , text
                     , bytestring
                     , streaming-commons
                     , network
                     , unordered-containers
                     , http-client
                     , wai-extra
                     , lucid
                     , gitrev
                     , safe-exceptions
